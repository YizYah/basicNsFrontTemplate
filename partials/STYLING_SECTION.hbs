
// ns__start_section {{fileInfo}}, loc: stylingSection
{{#if (eq boilerPlateInfo.componentType 'creation') }}
  const Form = styled.div`
  {{> startCustomStyling this}}
  margin: 2em;
  padding: 1.5em;
  border: none;
  border-radius: 5px;
  background-color: #F5F5F5;
  {{> endCustomStyling this}}
  `;
{{/if}}
{{#if (eq boilerPlateInfo.componentType 'list') }}
  {{#if (neq boilerPlateInfo.componentType nodeTypes.ROOT) }}
    const {{names.plural}}StyleWrapper = styled.div`
    {{> startCustomStyling this}}
    {{> endCustomStyling this}}
    `;
  {{/if}}
  {{#if (eq boilerPlateInfo.componentType nodeTypes.ROOT) }}
    const {{names.plural}}StyleWrapper = styled.div`
    {{> startCustomStyling this}}
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    {{> endCustomStyling this}}
    `;
  {{/if}}

{{/if}}
{{#if (and (eq boilerPlateInfo.componentType 'single') (eq boilerPlateInfo.dataType dataTypes.STRING)) }}
  const {{names.singular}}StyleWrapper = styled.div(
  ({ selected, isDeleting }) => `
  {{> startCustomStyling this}}
  margin: 2em 1em;
  padding: 1.5em;
  border: \${selected ? '1px solid aquamarine' : '1px solid white'};
  border-radius: 10px;
  box-shadow: 5px 5px 10px #888888;
  background-color: \${isDeleting && 'tomato'};
  cursor: \${selected ? 'auto' : 'pointer'};

  &:hover {
  border: 1px solid aquamarine;
  }
  {{> endCustomStyling this}}
  `
  );
{{/if}}
{{#if (and (eq boilerPlateInfo.componentType 'single') (eq boilerPlateInfo.dataType dataTypes.BOOLEAN)) }}
  const {{names.singular}}StyleWrapper = styled.span`
  {{> startCustomStyling this}}
  margin-left: 1.5em;
  display: inline-block;
  border: 1px solid #eeeeee;
  padding: 0.5em;
  {{> endCustomStyling this}}
  `;
{{/if}}
